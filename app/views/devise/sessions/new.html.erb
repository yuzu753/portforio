<div class= container>
  <h3>ログイン</h3>
    <%= form_with scope: :session,url: user_session_path do |f| %>
          <div class="form-group">
             <i class="material-icons prefix">email</i>
             <%= f.label :email, 'メールアドレス' %>
             <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group">
             <i class="material-icons prefix">vpn_key</i>
             <%= f.label :password, 'パスワード' %>
             <%= f.password_field :password, autocomplete: "new-password", :type => "password", :id => "email", :class => "form-control input-sm chat-input" %>
          </div>
          <button class="btn waves-effect waves-light teal darken-4" type="submit" name="action">
            <i class="material-icons right">send</i>
             <%= f.submit "" %>
             ログイン
          </button>
    <% end %>
</div>

