
<div class= "container">
	<div class="row">
		<div class="offset-s3 col s2">
		   <%= image_tag 'num-1.png', class: 'materialboxed' %>
		   <p class="center-align">1.投稿内容作成</p>
		</div>
		<div class="col s2">
		   <%= image_tag 'num-2.png', class: 'materialboxed' %>
		   <p class="center-align grey-text  lighten-1">2.投稿内容確認</p>
		</div>
		<div class="col s2">
		   <%= image_tag 'num-3.png', class: 'materialboxed' %>
		   <p class="center-align grey-text  lighten-1">3.投稿完了</p>
		</div>
	</div>
	<div class="row">
		<div class="offset-s2 col s8 offset-s2">
			<%= form_for @recruitment, url: recruitments_path do |f| %>
			 <%= f.hidden_field :user_id, :value => @user.id %>
			  <div class="input-field">
			  	 <%= f.label :category, 'カテゴリー' %><br>
			  	 <%= f.select :category, Recruitment.categories.keys.to_a, {} %>
			  </div>
			  <div class="input-field">
			  	 <%= f.label :event_date, '開催日' %><br>
<!-- 			  	 <%= f.date_select :event_date %> -->
			  	 <input type="text" class="datepicker">
			  </div>
			  <div class="input-field">
	            <%= f.label :name, 'タイトル' %><br>
	            <%= f.text_field :title, autofocus: true, class:"form-control", id: "inputTitle" %>
			  </div>
			  <div class="input-field">
			    <%= f.label :body, '本文' %>
	            <%= f.text_field :body, autofocus: true, class:"form-control", id: "inputBody" %>
			  </div>
			  <div class="input-field">
			  	<%= f.label :recruitment_number, '募集人数' %>
			  	<%= f.number_field :recruitments_number, min: 0 %>
			  </div>
			  <div class="input-field">
			  	 <%= f.label :area, 'エリア' %><br>
			  	 <%= f.select :area, Recruitment.areas.keys.to_a, {} %>
			  </div>
			  <div class="input-field">
			  	 <%= f.label :address, '住所' %>
			  	 <%= f.text_field :address, autofocus: :true, class:"form-control", id: "inpurAddress", placeholder:"住所" %>
			  </div>
     		  <%= f.fields_for :tag do |t| %>
			    <%= t.label :tag, 'タグ' %>
				<div class="chips"></div>
			  <% end %>
              <button class="btn waves-effect waves-light teal darken-4" type="submit" name="action">
                <i class="material-icons right">send</i>
                  <%= f.submit "" %>投稿する
                </button>
			  <% end %>
		</div>
	</div>
</div>
<script>
  // Or with jQuery
$('.chips').chips();

</script>
<div class="row">

</div>
