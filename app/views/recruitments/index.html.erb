<div class="container">
	<div class="row">
		<% @rucruitments.each do |r| %>
		  <div class="col s12">
		  	<div class= "card">
		  		<div class="card-content">
		  			<span class="card-title">
		  			  <%= link_to recruitment_path(r.id) do %>
		  				<%= r.title %>
		  			  <% end %>
		  			</span>
		  			<p class="category"><%= r.category %></p>
		  		</div>
		  	</div>
		  </div>
		<% end %>
	</div>
</div>